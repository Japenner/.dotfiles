#!/usr/bin/env zsh

# ======================= Config Files ======================== #

alias als="code ~/.dotfiles/zsh/.aliases"                # Open aliases config in editor
alias als-local="code ~/.dotfiles/zsh/local/aliases.zsh" # Open local aliases config in editor
alias ohmyzsh="code ~/.oh-my-zsh"                        # Edit Oh My Zsh config
alias zshconfig="code ~/.zshrc"                          # Edit .zshrc file

# ========================== Docker =========================== #

alias d:restart="osascript -e 'quit app \"Docker\"' && open -a Docker" # Restart Docker Desktop on macOS
alias d:wipe='docker stop "$(docker ps -a -q)" &&\
  docker rm "$(docker ps -a -q)" &&\
  docker rmi "$(docker images -q)" &&\
  docker volume rm "$(docker volume ls -qf dangling=true)"'            # Stop and remove all Docker containers, images, and dangling volumes
alias lzd="lazydocker"                                                 # Open Lazydocker for managing Docker containers

# ============================ Git ============================ #

alias g:auth='eval "$(ssh-agent -s)" && ssh-add ~/.ssh/id_ed25519_personal'          # Authenticate with the personal SSH key
alias g:auth-team='eval "$(ssh-agent -s)" && ssh-add ~/.ssh/id_ed25519_adhocteam_us' # Authenticate with the team SSH key
alias g:base='gco "$(g:default)" && git pull'                                        # Checkout the default branch and pull changes
alias g:default="git remote show origin | sed -n '/HEAD branch/s/.*: //p'"           # Get the default branch of the remote repository
alias g:find-branch='gb -a | grep -i'                                                # Find a branch by name
alias g:pub="ga . && gc -m 'updates' && git push && compare_current_github_branch"   # Add and commit all changes, push to repo, and open GitHub compare page
alias g:rb='git fetch origin && git rebase origin/"$(g:default)"'                    # Stash changes, rebase with default branch, and reapply stash
alias g:repo="git remote get-url origin | sed -E 's|.*[:/]([^/]+/[^/]+)\.git$|\1|; s|.*[:/]([^/]+/[^/]+)$|\1|'" # Get the user/repo of the remote repository
alias g:reset-file='gco "$(g:default)" --'                                           # Revert a file to the state of the default branch
alias g:rs='git reset origin/"$(g:default)"'                                         # Reset to the state of the remote default branch
alias g:unwip="git reset --soft HEAD~1"                                              # Undo the last commit, keeping changes in the working directory
alias g:update="g:rb && git push -f"                                                 # Rebase with default branch and force push
alias g:wip="ga . && gc --no-verify -m 'WIP'"                                        # Commit all changes under a 'WIP' message without verification
alias g:yolo="git push origin master --force --no-verify"                            # Force push changes to master without verification

# ========================= JavaScript ======================== #

alias yarn:clean="rm -rf node_modules && yarn cache clean && yarn install" # Clean and reinstall Yarn packages

# ======================== Productivity ======================= #

alias c="clear"                                  # Clear terminal screen
alias repos="cd ~/repos"                         # Shortcut to repos directory
alias serve="python3 -m http.server 8000"        # Start Python HTTP server
alias todo="$EDITOR ~/.todo"                     # Open todo file in editor

# =========================== Rails =========================== #

alias r:b="bundle"                                                                               # Bundle command shortcut
alias r:bb="b && yarn install"                                                                   # Bundle and Yarn install
alias r:bc="bundle exec rubocop"                                                                 # Run Rubocop with bundle
alias r:bs="bb && bc && bundle exec rspec"                                                       # Install, check, and test
alias r:cqa="RAILS_ENV=qa bin/rails c"                                                           # Rails console for QA environment
alias r:ct="RAILS_ENV=test bin/rails c"                                                          # Rails console for test environment
alias r:db:reset:dev="RAILS_ENV=development bin/rails db:reset"                                  # Reset dev database
alias r:db:reset:test="RAILS_ENV=test bin/rails db:reset"                                        # Reset test database
alias r:fs="bb && bin/foreman start"                                                             # Install and start Foreman
alias r:migrate="rake db:migrate && rake db:rollback && rake db:migrate && rake db:test:prepare" # Migrate, rollback, and prepare test db
alias r:s="bb && bin/rails s"                                                                    # Install and start Rails server
alias r:servers="lsof -wni tcp:3000"                                                             # List services on port 3000
alias r:sqa="bb && RAILS_ENV=qa bin/rails s"                                                     # Start Rails server in QA environment
alias r:st="bb && RAILS_ENV=test_one bin/rails s"                                                # Start Rails server in test_one environment
alias r:t="bb && bundle exec rails test"                                                         # Run Rails tests

# ======================== Automation ======================== #

scripts_path="${DOTFILES}/bin/.local/scripts"

alias branch="${scripts_path}/branch.sh"                      # Create a new branch and update GH ticket
alias g:pr-review="ruby ${scripts_path}/review_pr.rb"         # Run script to review pull requests
alias g:pr="ruby ${scripts_path}/generate_pr.rb"              # Run script to create a new pull request based on work
alias g:rr="${scripts_path}/open_pr_review_requests.sh"       # Open pull requests where a review is requested
alias g:update-all="${scripts_path}/update_git_repos.sh"      # Run script to update all git repositories
alias slack:away="${scripts_path}/set_slack_status.sh set"
alias slack:back="${scripts_path}/set_slack_status.sh clear"

