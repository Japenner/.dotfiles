#!/usr/bin/env zsh

# ======================== Automation ======================== #

bin_path="${DOTFILES}/.local/bin"

alias branch="branch"                       # Create a new branch and update GH ticket
alias chatgpt="chatgpt"                     # Send a prompt or file to OpenAI and get a response
