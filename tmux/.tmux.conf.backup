##################################################################################
### From: https://www.hamvocke.com/blog/a-guide-to-customizing-your-tmux-conf/ ###
##################################################################################

# Terminal settings for proper color support
set -g default-terminal "screen-256color"

# Color overrides for truecolor support
set -ga terminal-overrides ",screen-256color:Tc"
set -ga terminal-overrides ",xterm-256color:Tc"

# Environment settings
set-environment -g COLORTERM "truecolor"
set -s escape-time 0

# Stable settings to prevent escape sequence issues
set -g focus-events off
set -g status-interval 5

# Load local configuration if it exists
if-shell "test -f ~/.tmux.conf.local" "source ~/.tmux.conf.local"

# Status bar configuration - simplified to prevent escape sequence issues
set -g status on
set -g status-style 'bg=colour233 fg=colour137'
set -g status-left ''
set -g status-right '#[fg=colour233,bg=colour241,bold] %d/%m #[fg=colour233,bg=colour245,bold] %H:%M:%S '
set -g status-right-length 50
set -g status-left-length 20

# Window status styling
setw -g window-status-current-style 'fg=colour1 bg=colour238 bold'
setw -g window-status-current-format ' #I#[fg=colour249]:#[fg=colour255]#W#[fg=colour249]#F '
setw -g window-status-style 'fg=colour9 bg=colour235'
setw -g window-status-format ' #I#[fg=colour237]:#[fg=colour250]#W#[fg=colour244]#F '

bind r source-file ~/.tmux.conf
set -g base-index 1

set-window-option -g mode-keys vi
bind -T copy-mode-vi v send-keys -X begin-selection

# Use pbcopy on macOS instead of xclip
if-shell "uname | grep -q Darwin" \
    "bind -T copy-mode-vi y send-keys -X copy-pipe-and-cancel 'pbcopy'" \
    "bind -T copy-mode-vi y send-keys -X copy-pipe-and-cancel 'xclip -in -selection clipboard'"

# vim-like pane switching
bind -r ^ last-window
bind -r k select-pane -U
bind -r j select-pane -D
bind -r h select-pane -L
bind -r l select-pane -R

# Split panes using | and -
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# Enable mouse mode (tmux 2.1 and above)
set -g mouse on

# Don't rename windows automatically
set-option -g allow-rename off

# Custom key bindings
bind -r D neww -c "#{pane_current_path}" "[[ -e TODO.md ]] && nvim TODO.md || nvim $DOTFILES/personal/todo.md"

# Forget the find window. That is for chumps
bind-key -r f run-shell "tmux neww $DOTFILES/tmux/tmux-sessionizer"

bind-key -r i run-shell "tmux neww tmux-cht"
# bind-key -r H run-shell $DOTFILES/tmux/tmux-sessionizer ~/personal/vim-with-me"
# bind-key -r T run-shell $DOTFILES/tmux/tmux-sessionizer ~/personal/refactoring.nvim"
# bind-key -r N run-shell $DOTFILES/tmux/tmux-sessionizer ~/personal/harpoon"
# bind-key -r S run-shell $DOTFILES/tmux/tmux-sessionizer ~/personal/developer-productivity"

# reload config file (change file location to your the tmux.conf you want to use)
bind r source-file ~/.tmux.conf
